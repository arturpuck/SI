{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "paths": {
      "@js/*": [
        "resources/js/*"
      ],
      "@jscomponents/*": [
        "resources/js/components/*"
      ],
      "@jscomponents-decoration/*": [
        "resources/js/components/decoration/*"
      ],
      "@jscomponents-form-controls/*": [
        "resources/js/components/form_controls/*"
      ],
      "@interfaces/*": [
        "resources/js/interfaces/*"
      ],
      "@jsmodules/*": [
        "resources/js/modules/*"
      ],

      "@svgicon/*" : [
        "resources/js/components/decoration/icons/svg/*"
      ],

      "@config/*": [
        "resources/js/config/*"
      ],

      "@mixins/*" : [
        "resources/js/mixins/*"
      ]
    }
  },
  "include": [
    "resources/js/**/*"
  ],
}